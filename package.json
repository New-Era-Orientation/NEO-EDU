{
    "name": "neo-edu",
    "version": "1.0.0",
    "description": "NEO EDU - Offline-first Learning Management System",
    "private": true,
    "scripts": {
        "install:all": "npm install --prefix frontend && npm install --prefix backend",
        "dev:frontend": "npm run dev --prefix frontend",
        "dev:backend": "npm run dev --prefix backend",
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "build:frontend": "npm run build --prefix frontend",
        "build:backend": "npm run build --prefix backend",
        "build": "npm run build:backend && npm run build:frontend",
        "start:frontend": "npm run start --prefix frontend",
        "start:backend": "npm run start --prefix backend",
        "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
        "clean": "rm -rf frontend/node_modules frontend/.next backend/node_modules backend/dist"
    },
    "keywords": [
        "lms",
        "education",
        "learning",
        "offline-first",
        "pwa"
    ],
    "author": "NEO EDU Team",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}